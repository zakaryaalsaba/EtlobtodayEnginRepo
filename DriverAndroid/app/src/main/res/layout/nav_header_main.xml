<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/primary"
    android:padding="@dimen/spacing_16"
    android:fitsSystemWindows="true">

    <!-- Avatar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAvatar"
        android:layout_width="@dimen/avatar_size_large"
        android:layout_height="@dimen/avatar_size_large"
        app:cardCornerRadius="@dimen/avatar_size_large"
        app:cardElevation="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/on_primary"
        app:cardBackgroundColor="@color/primary_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_16">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/nav_header_desc"
            android:scaleType="centerCrop"
            android:padding="@dimen/spacing_8"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Driver Name -->
    <TextView
        android:id="@+id/tv_driver_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_12"
        android:text="Driver Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/on_primary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardAvatar" />

    <!-- Driver Email -->
    <TextView
        android:id="@+id/tv_driver_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_4"
        android:text="driver@example.com"
        android:textSize="14sp"
        android:textColor="@color/on_primary"
        android:alpha="0.8"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_driver_name" />

    <!-- Status Badge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStatusBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_8"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/on_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_driver_email">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_12"
            android:paddingVertical="@dimen/spacing_6">

            <View
                android:id="@+id/viewNavStatusIndicator"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="@dimen/spacing_6"
                android:background="@drawable/status_background"
                android:backgroundTint="@color/error" />

            <TextView
                android:id="@+id/tv_nav_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>