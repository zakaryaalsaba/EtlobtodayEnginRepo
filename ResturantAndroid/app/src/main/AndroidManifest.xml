<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- For Android 13+ (API 33+) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name=".RestaurantApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResturantAndroid"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:allowBackup,android:fullBackupContent"
        tools:targetApi="31">

        <!-- Google Maps API key for Confirm Location / New Address (set MAPS_API_KEY in root local.properties) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <!-- FCM Service - Only works if Firebase is configured -->
        <service
            android:name=".service.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:label="Register" />
        
        <activity
            android:name=".ui.auth.PhoneAuthActivity"
            android:exported="false"
            android:label="Phone Authentication" />
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />
        
        <activity
            android:name=".ui.restaurant.RestaurantDetailsActivity"
            android:exported="false"
            android:label="Restaurant Details"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.restaurant.MealDetailsActivity"
            android:exported="false"
            android:label="@string/meal_details"
            android:parentActivityName=".ui.restaurant.RestaurantDetailsActivity" />
        
        <activity
            android:name=".ui.restaurant.SearchActivity"
            android:exported="false"
            android:label="@string/search_restaurants"
            android:parentActivityName=".ui.restaurant.RestaurantDetailsActivity" />
        
        <activity
            android:name=".ui.cart.CartActivity"
            android:exported="false"
            android:label="@string/cart"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.checkout.ConfirmLocationActivity"
            android:exported="false"
            android:label="@string/confirm_location"
            android:parentActivityName=".ui.cart.CartActivity" />

        <activity
            android:name=".ui.checkout.NewAddressActivity"
            android:exported="false"
            android:label="@string/new_address"
            android:parentActivityName=".ui.checkout.ConfirmLocationActivity" />

        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:exported="false"
            android:label="@string/checkout"
            android:parentActivityName=".ui.checkout.NewAddressActivity" />
        
        <activity
            android:name=".ui.order.OrderConfirmationActivity"
            android:exported="false"
            android:label="@string/order_confirmed"
            android:parentActivityName=".ui.checkout.CheckoutActivity" />
        
        <activity
            android:name=".ui.order.OrderHistoryActivity"
            android:exported="false"
            android:label="@string/order_history"
            android:parentActivityName=".ui.MainActivity" />
        
        <activity
            android:name=".ui.order.OrderTrackingActivity"
            android:exported="false"
            android:label="@string/track_order"
            android:parentActivityName=".ui.order.OrderConfirmationActivity" />
        
        <activity
            android:name=".ui.account.AccountActivity"
            android:exported="false"
            android:label="@string/account"
            android:parentActivityName=".ui.MainActivity" />
        
        <!-- PayTabs: override theme to prevent silent crashes during activity inflation (ChatGPT fix). SDK declares this activity; we override theme only. -->
        <activity
            android:name="com.payment.paymentsdk.PaymentSdkActivity"
            android:theme="@style/PayTabsFixTheme"
            tools:replace="android:theme" />

        <!-- FileProvider for camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>