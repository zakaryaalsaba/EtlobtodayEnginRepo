<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Welcome Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary_container"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ivOrdersIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_cart"
                    android:contentDescription="@string/orders"
                    android:tint="@color/primary_color"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/tvWelcomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_orders"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_primary_container"
                    android:layout_marginTop="16dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orders_welcome_message"
                    android:textSize="16sp"
                    android:textColor="@color/on_primary_container"
                    android:alpha="0.8"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Orders Section -->
        <TextView
            android:id="@+id/tvRecentOrdersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent_orders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardWelcome" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/primary_color"
            app:layout_constraintTop_toBottomOf="@id/cardWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="64dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:minHeight="200dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvRecentOrdersTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_order" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnViewAllOrders">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="@string/no_orders"
                android:tint="@color/on_surface_variant"
                android:alpha="0.3"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_orders_yet"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_ordering_message"
                android:textSize="16sp"
                android:textColor="@color/on_surface_variant"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp" />

        </LinearLayout>

        <!-- View All Orders Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAllOrders"
            android:text="@string/view_all_orders"
            style="@style/StandardButton"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewOrders"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>