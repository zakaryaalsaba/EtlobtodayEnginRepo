<?xml version="1.0" encoding="utf-8"?>
<!-- Main dish row: left = name, description, price (JOD); right = image + arrow. No background, line separator below. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Left: name, description, price -->
        <LinearLayout
            android:id="@+id/layoutLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivProductImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Main Dish Name" />

            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/on_surface_variant"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Short description of the dish in two lines max." />

            <LinearLayout
                android:id="@+id/layoutPriceRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/offer_red"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    tools:text="12.50 JOD"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    tools:text="12.50 JOD" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right: image + arrow overlay -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Product"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/ivProductAction"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:background="@drawable/circle_primary"
                android:padding="6dp"
                app:srcCompat="@drawable/ic_chevron_right"
                app:tint="@color/white"
                android:contentDescription="View details or add" />

            <!-- Shown when product is in cart: stepper to add/remove directly -->
            <LinearLayout
                android:id="@+id/layoutCartStepper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_quantity_primary"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btnCartMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Decrease quantity"
                    app:srcCompat="@drawable/ic_remove_24"
                    app:tint="@color/on_primary" />

                <TextView
                    android:id="@+id/tvCartQuantity"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:textColor="@color/on_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="2" />

                <ImageView
                    android:id="@+id/btnCartPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Increase quantity"
                    app:srcCompat="@drawable/ic_add_24"
                    app:tint="@color/on_primary" />
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Line separator between products -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/surface_variant"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />
</LinearLayout>
