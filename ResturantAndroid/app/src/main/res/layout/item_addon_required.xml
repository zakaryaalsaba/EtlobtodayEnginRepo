<?xml version="1.0" encoding="utf-8"?>
<!-- One required add-on per row, then a line separator. Radio when choose-1, else checkbox. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingHorizontal="0dp"
        android:minHeight="48dp">

        <!-- Name and description: start (left) -->
        <LinearLayout
            android:id="@+id/layoutAddonInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvAddonPrice"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvAddonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Hot" />

            <TextView
                android:id="@+id/tvAddonDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:text="Description" />
        </LinearLayout>

        <!-- Price: original (strikethrough) when discounted, then display price -->
        <LinearLayout
            android:id="@+id/layoutAddonPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/layoutAddonInfo"
            app:layout_constraintEnd_toStartOf="@id/groupRadioCheckbox"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvAddonOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/offer_red"
                android:visibility="gone"
                android:layout_marginBottom="1dp"
                tools:text="+0.50 JOD"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvAddonPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="+0.50 JOD" />
        </LinearLayout>

        <!-- Radio/checkbox: end (right) -->
        <FrameLayout
            android:id="@+id/groupRadioCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioAddon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:buttonTint="@color/primary_color"
                tools:visibility="visible" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxAddon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:buttonTint="@color/primary_color"
                tools:visibility="visible" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Line separator between items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorSurfaceVariant"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />
</LinearLayout>
