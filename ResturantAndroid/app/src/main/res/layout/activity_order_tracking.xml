<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Order Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_number"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORD-XXXXX-XXXX"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurant Name"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Main Status Display -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary_container">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="32dp">

                    <ImageView
                        android:id="@+id/ivMainStatus"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_status_pending_large"
                        android:contentDescription="@string/order_status"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvStatusMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tracking_status_pending"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_primary_container"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Status Timeline -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_progress"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="20dp" />

                    <!-- Pending Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivStatusPending"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_pending"
                            android:contentDescription="@string/status_pending"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvStatusPending"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_pending"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface_variant" />
                    </LinearLayout>

                    <!-- Confirmed Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivStatusConfirmed"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_pending"
                            android:contentDescription="@string/status_confirmed"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvStatusConfirmed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_confirmed"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface_variant" />
                    </LinearLayout>

                    <!-- Preparing Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivStatusPreparing"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_pending"
                            android:contentDescription="@string/status_preparing"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvStatusPreparing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_preparing"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface_variant" />
                    </LinearLayout>

                    <!-- Ready Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/ivStatusReady"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_pending"
                            android:contentDescription="@string/status_ready"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvStatusReady"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_ready"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface_variant" />
                    </LinearLayout>

                    <!-- Completed Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivStatusCompleted"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_pending"
                            android:contentDescription="@string/status_completed"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tvStatusCompleted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status_completed"
                            android:textSize="16sp"
                            android:textColor="@color/on_surface_variant" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Order Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_items"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order items..."
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_variant"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminateTint="@color/primary_color"
                android:visibility="gone" />

            <!-- Back to Home Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToHome"
                android:text="@string/back_to_restaurants"
                style="@style/StandardButton"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

